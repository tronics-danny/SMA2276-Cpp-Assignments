#include <iostream>
using namespace std;
//main function
int main() {
//declaring the variables
    char operation;
    double num1, num2;
//print
    cout << "Enter an operator (+, -): ";
    //prompt the user to enter
    cin >> operation;
//print
    cout << "Enter two operands: ";
     //prompt the user to enter
    cin >> num1 >> num2;

    switch (operation) {
        case '+':
            cout << num1 + num2;
            break;
        case '-':
            cout << num1 - num2;
            break;
        default:
            cout << "Error! operator is not correct";
            break;
    }

    return 0;
}
